<%= render "shared/error", obj: @reservation %>
<% self.class.send(:include, ReservationsHelper) %>
<div class="container reservations-new">
  <div class="row">
    <div class="col-6 offset-3">
      <div class="reservations-new-nav">
        <h4 class="reservations-new-check-content">予約内容確認</h4>
        <h5 class="price-icon"><%= @reservation.room.price%> / 日</h5>
        <div class="reservations-new-date-select">
          <%= form_for @reservation, method: :post, url: reservations_create_path do |f| %>
            <%= f.hidden_field :user_id %>
            <%= f.hidden_field :room_id %>  
            <%= f.hidden_field :person_num %> 
            <%= f.hidden_field :room_price %> 
            <%= f.label :start, "開始日"%>
            <%= f.date_field :start_date, class:"form-control mb-4" ,readonly:"true"%>
            <%= f.label :end, "終了日"%>
            <%= f.date_field :end_date, class:"form-control mb-4",readonly:"true" %>
            <h6 class="reservations-new-check-content"><%= @reservation.use_date %></h6>          
            <h6 class="reservations-new-check-content">人数：<%= @reservation.person_num %>人</h6>          
            <%= f.label :total_amount, "合計金額" %>            
            <%= f.text_field :total_amount, class:"form-control mb-4",readonly:"true" %>
            <p class="reservations-new-check-content">上記内容でよろしければ「予約を確定」を押してください</p>            
            <%= f.submit "予約する", class:"form-control btn btn-primary my-3" %>        
          <%end %>
            <%= link_to "戻る", :back, class:"form-control btn btn-secondary"%>
        </div>
      </div>
    </div>
  </div>
</div>