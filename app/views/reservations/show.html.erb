<div class="container-fiuld room-posts">
  <h4 class="pb-4">予約済みルーム一覧</h4>
  <table>
    <thead>
      <tr style="text-align:center;">
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>合計料金</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>予約確定日時</th>
      </tr>
    </thead>
    <tbody>
      <% @reservations.each do |reservation| %>
        <tr>
          <td >
            <% if reservation.room.room_image? %>
              <%= link_to image_tag(reservation.room.room_image.url,class:"room-posts-image"), controller: 'rooms', action: 'show' ,id: reservation.room_id%>
            <% else %>
              <%= link_to image_tag('default_icon.jpg',class:"room-posts-image"), controller: 'rooms', action: 'show' ,id: reservation.room_id %>  
            <% end %>
          </td>
          <td class="posts-name"><%= link_to reservation.room.name, controller: 'rooms', action: 'show' ,id: reservation.room_id %></td>
          <td class="posts-contents"><%= reservation.room.introduction%></td>
          <td class="price-icon"><%= reservation.total_amount%></td>
          <td><%= reservation.start_date.to_s(:date_jp) %></td>          
          <td><%= reservation.end_date.to_s(:date_jp) %></td>          
          <td><%= reservation.created_at.to_s(:datetime_jp) %></td>          
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
