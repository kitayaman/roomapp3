<div class="container-fiuld user">
  <div class="row">
    <div class="col-lg-2 user-nav user-nav-pc d-lg-block d-none">
  <ul>
    <li><a href="/users/account">アカウント</a></li>
    <li class="active"><a href="/users/profile">プロフィール</a></li>
  </ul>
</div>
<div class="col-lg-2 user-nav user-nav-mobile d-lg-none ">
  <ul>
    <li><a href="/users/account">アカウント</a></li>
    <li class="active"><a href="/users/profile">プロフィール</a></li>
  </ul>
</div>
    <div class="col-md-10 user-view">
      <div class="user-view-box">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="update-content">
          <div class="row">
            <h5>プロフィール</h5>
          </div>
        <div>
        <div class="update-content">
            <div class="row">
              <div class="col-md-6 offset-md-3">
                <div class="icon-box">
                  <% if @user.user_image? %>
                    <%= image_tag current_user.user_image.url,class:"icon-image host-icon"%>
                  <% else %>
                    <%= image_tag 'default_icon.jpg' ,class:"icon-image host-icon"%>
                  <% end %>                                  
                </div>                  
              </div>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <%= f.label :user_image, "アイコン画像", class:"col-md-3 required-a" %>
              <%= f.file_field :user_image, class:"mb-4 col-md-9"%>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <%= f.label :introduction, "自己紹介", class:"col-md-3 required-a" %>
              <%= f.text_area :introduction, rows:5, placeholder: "自己紹介を入力" ,class:"form-control mb-4 col-md-9" %>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
            <%= f.submit "更新", class:"col-md-2 btn btn-primary mx-3"%> 
            <%= link_to "アイコン画像の削除", users_profile_path, method: :delete, class:"btn btn-primary col-md-2 mx-3" %>           
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
