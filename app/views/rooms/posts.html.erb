<div class="container-fiuld room-posts">
  <h4 class="pb-4">登録済みルーム一覧</h4>
  <table>
    <thead>
      <tr style="text-align:center;">
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>料金</th>
        <th>作成日</th>
      </tr>
    </thead>
    <tbody>
      <% @rooms.each do |room| %>
        <tr>
          <td >
            <% if room.room_image? %>
              <%= link_to image_tag(room.room_image.url,class:"room-posts-image"), room %>
            <% else %>
              <%= link_to image_tag('default_icon.jpg',class:"room-posts-image"), room %>  
            <% end %>
          </td>
          <td class="posts-name"><%= link_to room.name , room %></td>
          <td class="posts-contents"><%= room.introduction%></td>
          <td class="price-icon"><%= room.price%></td>
          <td><%= room.created_at.to_s(:datetime_jp) %></td>          
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
