<div class="top">
  <div class="top-main">
    <div class="container">
      <div class="row col-lg-6">
        <div class="form-fream">
          <div class="form-area">
            <p class="form-area-title mb-4">Potepan Shareでまだ体験したことのない旅をしよう</p>
            <%= search_form_for @q, url: search_rooms_path do |f| %>
              <%= f.label :name_cont ,"エリア"%>
              <%= f.search_field :name_cont, class: 'form-control mb-4', placeholder:"東京"%><br>
              <%= submit_tag '探す' ,class:'btn btn-primary'%>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="panel-area m-5">
      <h1 class="section-title">おすすめのエリア</h1>
      <div class="row">
        <div class="panel-item col-lg-3 col-6">
          <span>東京</span>
          <%= link_to search_rooms_path(q: { address_cont: "東京" }) do %>
            <img class="panel-image" src="/assets/img_tokyo.jpg" alt="">
          <% end %>
          <div class="shadow"></div>
        </div>
        <div class="panel-item col-lg-3 col-6">
          <span>大阪</span>
          <%= link_to search_rooms_path(q: { address_cont: "大阪" }) do %>
            <img class="panel-image" src="/assets/img_osaka.jpg" alt="">
          <% end %>
          <div class="shadow"></div>
        </div>
        <div class="panel-item col-lg-3 col-6">
          <span>京都</span>
          <%= link_to search_rooms_path(q: { address_cont: "京都" }) do %>
            <img class="panel-image" src="/assets/img_kyoto.jpg" alt="">
          <% end %>
          <div class="shadow"></div>
        </div>
        <div class="panel-item col-lg-3 col-6">
          <span>札幌</span>
          <%= link_to search_rooms_path(q: { address_cont: "札幌" }) do %>
            <img class="panel-image" src="/assets/img_sapporo.jpg" alt="">
          <% end %>
          <div class="shadow"></div>
        </div>        
      </div>
    </div>
  </div>
</div>
