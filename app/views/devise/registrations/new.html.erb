<div class="container device">
  <div class="device_frame">
    <p>新しいアカウントを作成</p>
    <div class="device_inner">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field form-row">
          <div class="col-2 required-b pt-2"></div>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control col-10 px-2", placeholder:"名前" %>                    
        </div>

        <div class="field form-row">
          <div class="col-2 required-b pt-2"></div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control col-10 px-2", placeholder:"メールアドレス" %>          
        </div>

        <div class="field form-row">
          <div class="col-2 required-b pt-2"></div>
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control col-10 px-2", placeholder:"パスワード" %>          
        </div>

        <div class="field form-row">
          <div class="col-2 required-b pt-2"></div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control col-10 px-2", placeholder:"パスワード(確認)" %>          
        </div>

        <div class="action">
          <%= f.submit "登録",class:"form-control btn-primary my-4" %>
        </div>
      <% end %>
        <%= link_to "すでにアカウントをお持ちの方はログイン", new_session_path(resource_name) %>
    </div>
  </div>
</div>